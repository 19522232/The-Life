<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/custom_button_menu"
    android:backgroundTintMode="@null">

    <TextView
        android:id="@+id/textviewDialogEventTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đây là tiêu đề"
        android:textColor="#FF1500"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/dialog_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_dialog"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textviewDialogEventContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là nội dung của sự kiện"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />
        <!--<Button
            android:id="@+id/buttonDialogEventOke"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Đồng ý"
            android:background="@drawable/custom_button_menu"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>-->

    </LinearLayout>

</LinearLayout>