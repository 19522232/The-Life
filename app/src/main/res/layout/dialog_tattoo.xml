<LinearLayout android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/custom_button_menu"
    android:backgroundTintMode="@null">

    <TextView
        android:id="@+id/textviewDialogEventTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hình xăm"
        android:textColor="#FF1500"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/dialog_event_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_dialog"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/textviewDialogEventContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn hình bạn muốn xăm"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/buttonDialogEventdragon"
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_menu"
            android:drawableLeft="@drawable/dragon"
            android:text="Hình con rồng"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/buttonDialogEventdiamond"
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Kim cương"
            android:background="@drawable/custom_button_menu"
            android:drawableLeft="@drawable/diamondv"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/buttonDialogEventsnow"
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Hoa tuyết"
            android:background="@drawable/custom_button_menu"
            android:drawableLeft="@drawable/snowflakes"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/buttonDialogEventsnake"
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Con rắn"
            android:background="@drawable/custom_button_menu"
            android:drawableLeft="@drawable/snake"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/buttonDialogEventOke"
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Không xăm nữa"
            android:background="@drawable/custom_button_menu"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>