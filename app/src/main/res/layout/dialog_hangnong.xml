<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/custom_button_menu"
    android:backgroundTintMode="@null">


    <RelativeLayout
        android:id="@+id/dialog_event_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_crime"
        android:orientation="vertical"
        android:padding="5dp">

            <TextView
                android:id="@+id/tvCuahang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="77dp"
                android:layout_toLeftOf="@id/imvGangster"
                android:background="@drawable/custom_color"
                android:fontFamily="@font/anton"
                android:padding="10dp"
                android:text="HÀNG NÓNG"
                android:textAlignment="center"
                android:textColor="@color/Red"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imvGangster"
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/gangster">

            </ImageView>

            <ListView
                android:id="@+id/lvHangnong"
                android:background="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/imvGangster"
                android:layout_marginTop="3dp">
            </ListView>

            <Button
                android:id="@+id/btn_Roi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lvHangnong"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/frame"
                android:text="Rời cửa hàng">
            </Button>
        </RelativeLayout>
</LinearLayout>